#include <iostream>

using namespace std;

int n;
string theLine;

int main () {
	int res = 0;
	int nonFix = 0;
	int fix = 0;
	int bestFix = 0;
	int reversalIndex = -1;
	int curChain = -1;
	string curReversal = "";
	
	cin >> n >> theLine;
	
	int check = n - 1;
	
	for (int i = 0; i < n; i += 2) {
		if (theLine[i] == 'G' and theLine[i + 1] != 'G') {
			if (curChain != 0) {
				res++;
				curChain = 0;
			}
		}
		if (theLine[i] != 'G' and theLine[i + 1] == 'G') {
			if (curChain != 1) {
				res++;
				curChain = 1;
			}
		}
	}
	if (curChain == 1) {
		res--;
	}
	
	cout << res;
}
